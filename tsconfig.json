{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es2019"
  },
  "include": [
    "src/**/*",
    "spec/**/*"
  ],
  "lib": [
    "es2019"
  ],
  "exclude": [
    "node_modules",
    "spec/**/*.spec.ts"
  ]
}